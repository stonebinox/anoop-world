{% extends "layout.html" %}
{% block content %}
<body ng-app="anoop" ng-controller="home">
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span> 
            </button>
            <a class="navbar-brand" href="javascript:void(0)" style="color:#ffa500;">Anoop Santhanam</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
                <li class="active"><a href="https://anoopworld.herokuapp.com" data-toggle="tooltip" title="A little something about me" data-placement="auto">Introduction</a></li>
                <li><a href="#" ng-click="position=3;displayText();" id="education" data-toggle="tooltip" data-placement="auto" title="What my academic qualifications are"><span class="glyphicon glyphicon-book"></span> Education</a></li>
                <li><a href="#" ng-click="position=4;displayText();" id="experience" data-toggle="tooltip" data-placement="auto" title="Where I've worked in the past"><span class="glyphicon glyphicon-briefcase"></span> Experience</a></li> 
                <li><a href="#" ng-click="position=8;displayText();" id="projects" data-toggle="tooltip" data-placement="auto" title="Everything I've built till date"><span class="glyphicon glyphicon-folder-close"></span> Projects</a></li> 
                <li><a href="#" ng-click="position=37;displayText();" id="patents" data-toggle="tooltip" data-placement="auto" title="A patent in my name"><span class="glyphicon glyphicon-list-alt"></span> Patent</a></li> 
                <li><a href="#" ng-click="position=39;displayText();" id="media" data-toggle="tooltip" data-placement="auto" title="Media coverage"><span class="glyphicon glyphicon-facetime-video"></span> In the media</a></li>
                <li><a href="#" ng-click="position=48;displayText();" id="contact" data-toggle="tooltip" data-placement="auto" title="Info to contact me"><span class="glyphicon glyphicon-envelope"></span> Contact me</a></li> 
            </ul>
            <form class="navbar-form navbar-right">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search" data-toggle="tooltip" title="Search for anything about me" data-placement="auto" ng-model="search" ng-change="searchMe()">
                    <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                    </div>
                </div>
            </form>
            </div>
        </div>
    </nav>
    <div class="container" style="margin-top:60px;">
        <h6 class="text-left" id="click" style="cursor:pointer;opacity:0.0;" ng-click="nextMessage()">Tap here to continue</h6>
        <h1 class="text-left" id="maintext"></h1>
        <br>
        <div id="content"></div>
    </div>
    <div class="container-fluid" ng-init="position=0;displayText();">
        <div id="myModal" class="modal fade" role="dialog"></div>
    </div>
    <script type="text/javascript">
        $('[data-toggle="tooltip"]').tooltip({
            trigger: "hover"
        });
    </script>
</body>
{% endblock %}